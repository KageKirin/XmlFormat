<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>xf</ToolCommandName>
  </PropertyGroup>

  <PropertyGroup Label="build metadata">
    <PackageId>KageKirin.XmlFormat.Tool</PackageId>
  </PropertyGroup>

  <ItemGroup Label="package references">
    <PackageReference Include="CommandLineParser" />
    <PackageReference Include="TurboXml" />
  </ItemGroup>

  <ItemGroup Label="project references">
    <ProjectReference Include="..\XmlFormat.Lib\XmlFormat.Lib.csproj" />
  </ItemGroup>

</Project>
